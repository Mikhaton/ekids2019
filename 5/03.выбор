var имяВыбраннойСферы = null;
var имяВыбраннойСферыИзменили = null;

function выбратьСферу()
{
    if (муром.мышь.нажатыеКнопки.length == 1)
    {
        var сфера = муром.камера.узелВПозиции(муром.мышь.поз???, маска);
        if (???)
        {
            имяВыбраннойСферы = сфера.имя;
            имяВыбраннойСферыИзменили.уведомить();
        }
    }
}

function отслеживатьВыборСфер()
{
    имяВыбраннойСферыИзменили = new Уведомитель();
    при(муром.мышь.нажатыеКнопкиИзменили, выбратьСферу);
}
